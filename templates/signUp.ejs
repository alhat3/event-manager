<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
        <div>
            <!-- <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
                alt="Your Company"> -->
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign up
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Or
                <a href="/api/v1/auth/login" class="font-medium text-indigo-600 hover:text-indigo-500">Go to login
                    page</a>
            </p>
        </div>
        <form class="mt-8 space-y-6" action="/api/v1/auth/sign-up" method="POST">
            <!-- <input class="inputs" type="hidden" name="remember" value="true"> -->
            <div class="message">
                <%if(message=='Email has already been taken'){%>
                    <div class="bg-blue-100 border border-blue-400 text-blue-700 px-3 py-1 rounded relative text-center"
                        role="alert">
                        <span class="block sm:inline">
                            <%=message%>.
                        </span>

                    </div>
                    <%}else if(message=='Password and Confirm password are not same' ){%>
                        <div class="bg-red-100 border border-red-400 text-red-700 px-3 py-1 rounded relative text-center"
                            role="alert">
                            <span class="block sm:inline">
                                <%=message%>.
                            </span>

                        </div>
                        <%}%>
            </div>


            <div class="-space-y-px rounded-md shadow-sm all-inputs">
                <div class="input-div" style="margin-bottom:.5rem;">
                    <label for="email-address" class="sr-only">Username</label>
                    <input id="username" name="username" type="text" autocomplete="name" required minlength="2"
                        class="inputs relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                        placeholder="First and last name">
                </div>
                <!-- <div class="input-div" style="margin-bottom:.5rem;">
                    <label for="phone-number" class="sr-only">Phone number</label>
                    <input id="phone_number" name="phone_number" type="number" autocomplete="cc-number" required
                        minlength="5"
                        class="inputs relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                        placeholder="Phone number">
                </div> -->
                <div class="input-div" style="margin-bottom:.5rem;">
                    <label for="email-address" class="sr-only">Email address</label>
                    <input id="email-address" name="email" type="email" autocomplete="email" minlength="5"
                        class="inputs relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                        placeholder="Email address" required>
                </div>
                <div class="input-div" style="margin-bottom:.5rem;">
                    <label for="password" class="sr-only">Password</label>
                    <input id="password" name="password" type="password" autocomplete="current-password" required
                        minlength="4"
                        class="inputs relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                        placeholder="Password">
                </div>
                <div class="input-div">
                    <label for="confirm_password" class="sr-only">Confirm Password</label>
                    <input id="confirm_password" name="confirm_password" type="password" required minlength="4"
                        class="inputs relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                        placeholder="Confirm Password">
                </div>
            </div>

            <div class="flex items-center justify-end">
                <div class="text-sm">
                    <a href="/api/v1/auth/login" class="font-medium text-indigo-600 hover:text-indigo-500">Log in?</a>
                </div>
            </div>
            <div>
                <button type="submit" id="submitBtn"
                    class="group relative flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    <span id="lockIcon" class="absolute inset-y-0 left-0 flex items-center pl-3">
                        <!-- Heroicon name: mini/lock-closed -->
                        <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400"
                            xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            aria-hidden="true">
                            <path fill-rule="evenodd"
                                d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                                clip-rule="evenodd" />
                        </svg>
                    </span>
                    Sign up
                </button>
            </div>
        </form>
    </div>
</div>
<script>
    let username = document.getElementById('username');
    let phone_number = document.getElementById('phone_number');
    let email = document.getElementById('email-address');
    let password = document.getElementById('password');
    let confirm_password = document.getElementById('confirm_password');
    let inputs = document.querySelectorAll('.inputs');
    let lockIcon = document.getElementById('lockIcon');
    let submitBtn = document.getElementById('submitBtn');
    inputs.forEach((input) => {
        input.addEventListener('input', () => {
            console.log(input.value);
            if (username.value.length > 1 && phone_number.value.length > 5 && email.value.length > 4 && password.value.length > 3 && confirm_password.value.length > 3) {
                lockIcon.classList.remove('absolute');
                lockIcon.classList.add('hidden');
                // submitBtn.removeAttribute('disabled')
            } else {
                lockIcon.classList.remove('hidden');
                lockIcon.classList.add('absolute');
                // submitBtn.setAttribute('disabled','disabled')

            }
        });
    })     
</script>